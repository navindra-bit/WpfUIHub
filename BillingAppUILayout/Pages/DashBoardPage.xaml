<Page x:Class="SampleAppLogin.Pages.DashBoardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SampleAppLogin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DashBoardPage" Background="White">

    <StackPanel>
        <TextBlock Text="DashBoard Summary"  Margin="10,15,15,15" Padding="10,0,0,0" FontSize="20" Height="30" FontWeight="Bold" Background="#2ECC71" ></TextBlock>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"></ColumnDefinition>
                <ColumnDefinition Width="200"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border CornerRadius="10" Grid.Column="0" Height="100" Width="190" Margin="0,10,0,0" Padding="0,0,30,0" Background="SkyBlue">
            <StackPanel Grid.Column="0"  Margin="10" >
                <TextBlock Text="Bills Today" TextAlignment="Center" FontSize="25" FontWeight="Bold"></TextBlock>
                <TextBox Text="23" IsReadOnly="True" BorderThickness="0" Background="Transparent" 
                          Width="120" FontSize="35" FontWeight="Medium"></TextBox>
            </StackPanel>
                
            </Border >
            <Border  CornerRadius="10" Grid.Column="1" Height="100" Width="200" Margin="0,10,0,0" Background="LightGreen">
                <StackPanel  Height="90" Width="190" Margin="0,10,0,0" >
                    <TextBlock Text="Total Amount" TextAlignment="Center" FontSize="25" FontWeight="Bold"></TextBlock>
                    <TextBox Text="$9,550" IsReadOnly="True" BorderThickness="0" Background="Transparent" 
                          Width="160" FontSize="30" FontWeight="Medium"></TextBox>
                </StackPanel>
            </Border>
        </Grid> 
        
       
    </StackPanel>
</Page>
