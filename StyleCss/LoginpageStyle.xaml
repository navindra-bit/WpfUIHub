<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBlock"  x:Key="WelcometextStyle">
        <Setter Property="Foreground" Value="#fff"></Setter>
        <Setter Property="FontSize" Value="30"></Setter>
        <Setter Property="FontFamily" Value="serif"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="Margin" Value="40,0,0,10"></Setter>
    </Style>
    <Style TargetType="TextBlock" x:Key="InfoStyleONe" >
        <Setter Property="Foreground" Value="#fff"></Setter>
        <Setter Property="FontSize" Value="11"></Setter>
        <Setter Property="FontFamily" Value="cursive"></Setter>
        <Setter Property="FontWeight" Value="Medium"></Setter>
        <Setter Property="Margin" Value="0,0,0,30"></Setter>
    </Style>
    <Style TargetType="TextBlock"  x:Key="InfoStyleTwo">
        <Setter Property="Foreground" Value="Gray"></Setter>
        <Setter Property="FontSize" Value="11"></Setter>
        <Setter Property="FontFamily" Value="Georgia, serif"></Setter>
        <Setter Property="Margin" Value="0,0,0,0"></Setter>
    </Style>
    <Style TargetType="Button"  x:Key="LeanrmoreStyle">
        <Setter Property="Foreground" Value="#fff"></Setter>
        <Setter Property="FontSize" Value="11"></Setter>
        <Setter Property="Height" Value="25"></Setter>
        <Setter Property="Margin" Value="40,0,50,0"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button" >
                    <Border CornerRadius="10"  BorderBrush="White" BorderThickness="2" Width="80" >
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="Button"  x:Key="OurFeaturesStyle">
        <Setter Property="Foreground" Value="#DE3163"></Setter>
        <Setter Property="FontSize" Value="11"></Setter>
        <Setter Property="Width" Value="80"></Setter>
        <Setter Property="BorderThickness" Value="0"></Setter>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border   Background="White" CornerRadius="10"   >
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style TargetType="TextBlock"  x:Key="LoginTitleStyle">
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="Margin" Value="0,10,0,10"></Setter>
    </Style>

    <Style TargetType="TextBox" x:Key="UsernameStyle">
        <Setter Property="Width" Value="300"></Setter>
        <Setter Property="BorderThickness" Value="0,0,0,1"></Setter>
        <Setter Property="Foreground" Value="Gray"></Setter>
    </Style>


    <Style TargetType="PasswordBox"  x:Key="PasswordStyle">
        <Setter Property="Width" Value="300"></Setter>
        <Setter Property="BorderThickness" Value="0,0,0,1"></Setter>
        <Setter Property="Foreground" Value="Gray"></Setter>
    </Style>


    <Style TargetType="Button"  x:Key="ForgetPasswordStyle">
        <Setter Property="Padding" Value="0,-2,0,0"></Setter>
        <Setter Property="Width" Value="100"></Setter>
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="Margin" Value="120,0,0,0"></Setter>
        <Setter Property="BorderThickness" Value="0"></Setter>
    </Style>


    <Style TargetType="Button"  x:Key="LoginBntStyle">
        <Setter Property="Foreground" Value="#fff"></Setter>
        <Setter Property="FontWeight" Value="Medium"></Setter>
        <Setter Property="FontFamily" Value="Login Regular"></Setter>
        <Setter Property="Margin" Value="0,30,0,0"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border   Background="#DE3163" CornerRadius="15"   Width="80" Height="25" >
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style TargetType="TextBlock" x:Key="donthaveAccountStyle">
        <Setter Property="Margin" Value="0,0,20,0"></Setter>
        <Setter Property="Foreground" Value="#DE3163"></Setter>
        <Setter Property="Padding" Value="2"></Setter>
    </Style>


    <Style TargetType="Button" x:Key="SignUpStyle" >

        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border   BorderBrush="#DE3163"  BorderThickness="2" CornerRadius="10" Width="60" Padding="1">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="CheckBox" x:Key="RememberMeStyle">
        <Setter Property="Width" Value="100"></Setter>
        <Setter Property="Margin" Value="2,0,0,0"></Setter>
    </Style>
</ResourceDictionary>