<Window x:Class="SimpleCalculatorWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleCalculatorWpf"
        mc:Ignorable="d"
        Title="Calculator" 
        Height="370" Width="395" ResizeMode="NoResize"    >
     
    <StackPanel>
        <TextBox x:Name="result" TextAlignment="Right"   Padding="0,50,0,0"  FontSize="25" FontWeight="Bold" IsReadOnly="True"  Height="100" Width="365"></TextBox>

        <StackPanel Orientation="Horizontal"    >
            <Button  x:Name="seven" Content="7" Margin="2"  BorderThickness="0" Foreground="White" Background="#3e3a38" FontSize="20"  Height="50" Width="90" Click=" number_Click"></Button>
            <Button x:Name="eight" Content="8" Margin="2" BorderThickness="0" Foreground="White" Background="#3e3a38" Height="50"  FontSize="20"  Width="90" Click=" number_Click"></Button>
            <Button  x:Name="nine" Content="9" Margin="2" BorderThickness="0" Foreground="White" Background="#3e3a38"  FontSize="20"  Click=" number_Click" Height="50" Width="90"></Button>
            <Button  x:Name="mul" Content="*" Margin="2" BorderThickness="0" Foreground="White" Background="#343131" FontSize="20"  Click="oper_Click" Height="50" Width="90"></Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal"   >
            <Button x:Name="four" Content="4" Margin="2" BorderThickness="0" FontSize="20" Foreground="White" Background="#3e3a38" Click=" number_Click" Height="50" Width="90"></Button>
            <Button  x:Name="five" Content="5" Margin="2" BorderThickness="0" FontSize="20" Foreground="White" Background="#3e3a38"  Click=" number_Click" Height="50" Width="90"></Button>
            <Button x:Name="six" Content="6" Margin="2" BorderThickness="0" FontSize="20" Foreground="White" Background="#3e3a38" Click=" number_Click" Height="50" Width="90" ></Button>
            <Button  x:Name="sub" Content="-" Margin="2" BorderThickness="0"  FontSize="20" Foreground="White" Background="#343131" Click=" oper_Click" Height="50" Width="90"></Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal"  >
            <Button  x:Name="one" Content="1" Margin="2" BorderThickness="0" FontSize="20" Foreground="White" Background="#3e3a38"  Click=" number_Click" Height="50" Width="90"></Button>
            <Button x:Name="two" Content="2" Margin="2" BorderThickness="0" FontSize="20" Foreground="White" Background="#3e3a38" Click=" number_Click" Height="50" Width="90"></Button>
            <Button  x:Name="three" Content="3" Margin="2" BorderThickness="0" FontSize="20" Foreground="White" Background="#3e3a38" Click=" number_Click" Height="50" Width="90"></Button>
            <Button   x:Name="add" Content="+" Margin="2" BorderThickness="0" FontSize="20" Foreground="White" Background="#343131" Click=" oper_Click" Height="50" Width="90" ></Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" >
            <Button  x:Name="clear" Content="C" Margin="2"  BorderThickness="0" FontSize="20" Foreground="White" Background="#343131" Click="clear_Click" Height="50" Width="90"></Button>
            <Button  x:Name="zero" Content="0" Margin="2" BorderThickness="0"  FontSize="20" Foreground="White" Background="#3e3a38" Click=" number_Click" Height="50" Width="90"></Button>
            <Button  x:Name="div" Content="/" Margin="2" BorderThickness="0" FontSize="20" Foreground="White" Background="#343131" Click=" oper_Click" Height="50" Width="90"></Button>
            <Button  x:Name="equal" Content="=" Margin="2" BorderThickness="0"  FontSize="20" Foreground="White" Background="#343131" Click="equal_Click" Height="50" Width="90"></Button>
        </StackPanel>
    </StackPanel>
</Window>
