<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

      <!--Login Page Title Style-->
    <Style TargetType="TextBlock" x:Key="LoginTitle">
        <Setter Property="Foreground" Value="#5c00c8"></Setter>
        <Setter Property="FontSize" Value="30"></Setter>
        
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
    </Style>
    <!--Username TextBlock in Login Page-->
    <Style x:Key="usernameblock" TargetType="TextBlock">
        <Setter Property="FontSize" Value="15"></Setter>
        <Setter Property="FontWeight" Value="Medium"></Setter>
        <Setter Property="Width" Value="100"></Setter>
        <Setter Property="Margin" Value="0,10,150,5"></Setter>
        
        <Setter Property="Foreground" Value="#8033db"></Setter>
    </Style>
    <!--Password TextBlock in Login Page-->
    <Style x:Key="Passwordblock" TargetType="TextBlock">
        <Setter Property="FontSize" Value="15"></Setter>
        <Setter Property="FontWeight" Value="Medium"></Setter>
        <Setter Property="Width" Value="Auto"></Setter>
        <Setter Property="Width" Value="100"></Setter>
        <Setter Property="Margin" Value="0,2,150,5"></Setter>
        <Setter Property="Foreground" Value="#8033db"></Setter>
    </Style>
     <!--Username textbox in Login Page-->
    <Style x:Key="usernamebox" TargetType="TextBox">
        <Setter Property="Width" Value="250"></Setter>
        <Setter Property="Height" Value="30"></Setter>
        <Setter Property="Padding" Value="1"></Setter>
        <Setter Property="FontSize" Value="15"></Setter>
    </Style>
    <!--Password textbox in Login Page-->
    <Style x:Key="passwordbox" TargetType="PasswordBox">
        <Setter Property="Width" Value="250"></Setter>
        <Setter Property="Padding" Value="0"></Setter>
        <Setter Property="Height" Value="30"></Setter>
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="FontWeight" Value="Bold" ></Setter>
    </Style>
    <!--Username & password alert label in Login Page-->
    <Style x:Key="logerorralr" TargetType="Label">
        <Setter Property="Height" Value="15"></Setter>
        <Setter Property="FontSize" Value="10"></Setter>
        <Setter Property="Foreground" Value="Red"></Setter>
        <Setter Property="Padding" Value="0,0,0,2"></Setter>
        <Setter Property="Margin" Value="122,0,0,0"></Setter>
    </Style>
   

</ResourceDictionary>